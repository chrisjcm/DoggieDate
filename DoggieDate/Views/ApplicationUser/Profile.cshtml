									<li class="list-group-item">Ålder: @Html.DisplayFor(model => model.Age)</li>
									<li class="list-group-item">Senast inloggad: @Html.DisplayFor(model => model.LastLogin)</li>
									<li class="list-group-item">Ras: @Html.DisplayFor(model => model.Breed)</li>
								</ul>
							</div>
						</div>
					</div>


					
					
