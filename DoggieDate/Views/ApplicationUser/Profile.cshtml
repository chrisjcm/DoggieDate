@model DoggieDate.Models.ApplicationUser
@using Microsoft.AspNetCore.Identity
@{
	ViewData["Title"] = "Profil";
}

<div class="container-fluid">
	<h1>@Html.DisplayFor(model => model.UserName)</h1>

	<div class="card">
		<div class="card-body">
			<div class="row">
				<div class=".col">

                    <div class="card ml-3 mb-3" style="width: 18rem;">

                            <a href="@Model.Avatar" data-toggle="lightbox" data-gallery="gallery">
                                <img src="@Model.Avatar" class="img-fluid rounded img-thumbnail" data-title="A random title">
                            </a>
                      

                        <div class="card-body">
                            <h6 class="card-title">@Html.DisplayFor(model => model.Dogname)</h6>
                            
                        </div>

                        <ul class="list-group list-group-flush">
                            @if (Model.Id != ViewData["LoggedInUser"].ToString())
                            {

                                <li class="list-group-item">

                                    
									@if ((bool)ViewData["Bool"])
                                    {

                                    }
                                    else
                                    {
                                    <input type="button" class="btn btn-outline-primary" value="👍" onclick="location.href='@Url.Action("AddContact", new { Model.Id })'" />

                                    }
                                    <input type="button" class="btn btn-primary" value="📧" onclick="location.href='@Url.Action("SendMessage", new { Model.Id })'" />
                                </li>
                            }


                            @if (User.IsInRole("Admin"))
                            {
                                <!--MODERATOR DROPOWN-->
                                <li class="list-group-item">
                                    <!-- Example single danger button -->
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Moderator
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" href="#">Ge beröm</a>
                                            <a class="dropdown-item" href="#">Ge varning</a>
                                            <a class="dropdown-item" href="#">Spärra konto</a>
                                            <div class="dropdown-divider"></div>
                                            <a class="dropdown-item" href="#">Återställ lösenord</a>
                                        </div>
                                    </div>
                                </li>
                            }




                        </ul>

                    </div>
				</div>
				<div class="col  ml-3" style="min-width:200px">
					<div class="row">
						<div class="card  mb-3">

							<div class="card-header">
								Om mig
							</div>

							<div class="card-body">
