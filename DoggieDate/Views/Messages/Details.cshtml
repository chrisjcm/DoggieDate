@model DoggieDate.Models.Message

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Meddelande Detaljer</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
          Avsändare
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sender.UserName)
        </dd>
        <dt class = "col-sm-2">
            Mottagare
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Receiver.UserName)
        </dd>
        <dt class = "col-sm-2">
            Text
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class = "col-sm-2">
            Skickat
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TimeStamp)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsRead)
        </dt>
        
    </dl>
</div>
